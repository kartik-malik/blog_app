                <p><%=blog.body.substring(0,50)%></p>
              </div>
                <div class=extra>
                    <a class="ui floated basic voilet button" href="/blogs/<%=blog._id%>">read more</a>
                    <% }) %> 
                </div>
            </div>
            
             
            
            
            
           
             
        </div>
    </div>
      



